<main>
  <h1>Delete Cube</h1>
  {{> error-message}}
  <div class="form">
    <form action='/delete/{{_id}}' method="POST">
    <h1>{{name}}</h1>
      <label for="name">Name</label>
      <input type="text" id="name" name="name" value="{{name}}" disabled="true" />
      <label for="name">Description</label>
      <textarea id="name" name="description" disabled="true" />{{description}}</textarea>
      <label for="image">ImageUrl</label>
      <input type="text" id="image" name="imageUrl" value="{{imageUrl}}" disabled="true" />
      <label for="difficulty">Difficulty</label>
      <select id="difficulty" name="difficultyLevel" value="{{difficulty}}" disabled="true" />
      <option value="{{difficulty}}">{{value}}</option>
      </select>
      <input type="submit" value="Delete">
    </form>
  </div>
</main>